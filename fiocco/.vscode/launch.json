{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug MyC89Program",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/build/koch",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
